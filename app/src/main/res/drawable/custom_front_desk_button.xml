<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval" android:alpha="0.1">
            <gradient android:endColor="@color/colorWhite" android:startColor="@color/colorWhite" android:type="linear" />
            <stroke android:width="1dp" android:color="@color/colorGray" />
            <corners android:radius="@dimen/radius_bg_small" />
            <size android:width="200dp" android:height="200dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval" android:alpha="0.1">
            <gradient android:centerColor="@color/colorBtnEndLight" android:endColor="@color/colorBlack" android:startColor="@color/colorBlack" android:type="linear" />
            <stroke android:width="1dp" android:color="@color/colorGray" />
            <corners android:radius="@dimen/radius_bg_small" />
            <size android:width="200dp" android:height="200dp"/>
        </shape>
    </item>
</selector>