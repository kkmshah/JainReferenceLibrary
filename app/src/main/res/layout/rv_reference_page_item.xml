<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:id="@+id/llDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/ivKeyword"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:src="@mipmap/keys"
                android:visibility="gone"
                app:tint="@color/light_background" />

            <ImageView
                android:id="@+id/ivShlok"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:src="@mipmap/shlok_search"
                app:tint="@color/light_background"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivIndex"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:src="@drawable/year"
                app:tint="@color/light_background"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivYear"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:src="@drawable/year"
                app:tint="@color/light_background"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1.9"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/black"
                android:text="वासुदेव हिदी एक अध्ययन"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

