<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvQL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:textColor="@color/light_background"
            android:text="Quick Link: 1"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llTitlePage"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/book_details_edit_text"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:src="@mipmap/link"
                app:tint="@color/light_background" />

            <TextView
                android:id="@+id/tvTitlePage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="TITLE PAGE"
                android:textColor="@color/light_background" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/Grey_14" />

            <TextView
                android:id="@+id/txtTitlePgCount"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:text="3"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
