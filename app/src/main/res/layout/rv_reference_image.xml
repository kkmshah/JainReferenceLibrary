<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_middle"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/box_gallary"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="5"
    app:cardUseCompatPadding="true"
    android:id="@+id/llIndexBook">
    <androidx.cardview.widget.CardView
        android:id="@+id/llImage"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="3"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="7dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="5dp"
            android:src="@mipmap/book_close" />

    </androidx.cardview.widget.CardView>


    <!-- <View
         android:layout_width="1dp"
         android:layout_height="match_parent"
         android:layout_marginTop="5dp"
         android:background="@color/Grey_5" />-->

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tvIndexName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:maxLines="5"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Grey_16"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Grey_16"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvPublisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Grey_16"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:layout_gravity="top"
            android:layout_weight="0.2"
            android:visibility="gone">

            <ImageView


                android:id="@+id/ivMenu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top"
                android:src="@mipmap/image_menu" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
